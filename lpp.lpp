%{
#include "hpp.hpp"
%}
%option yylineno
%option noyywrap
%%
#[^\n]*				{}

^\.end				{yyterminate();}

\$\([A-Z]+\)		TOC(Sym,SYM)		/* make var */
[a-z]+\.[a-z]+		TOC(Sym,SYM)		/* file name */
[a-z_][a-zA-Z_]*	TOC(Sym,SYM)		/* term */
[A-Z][a-zA-Z_]*		TOC(Sym,SYM)		/* var */

\(					TOC(Op,LP)
\)					TOC(Op,RP)
\[					TOC(Op,LQ)
\]					TOC(Op,RQ)
\{					TOC(Op,LC)
\}					TOC(Op,RC)

\=					TOC(Op,EQ)
\@					TOC(Op,AT)
\~					TOC(Op,TILD)
\.					TOC(Op,DOT)

[ \t\r\n]+			{}
%%